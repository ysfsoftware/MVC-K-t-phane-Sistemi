@using MVCKUTUPHANE.Models.Entity
@model List<TBLYAZAR> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yazarlar</h2>
<br />

<table class="table table-hover">
    <tr style="background-color:#e6a32e">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>YAZARIN KİTAPLARI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var yzr in Model)
    {
<tr>
    <td>@yzr.ID</td>
    <td>@yzr.AD</td>
    <td>@yzr.SOYAD</td>
    <td><a href="/Yazar/YazarKitaplar/@yzr.ID" class="btn btn-info">Yazarın Kitapları</a></td>
    <td>@Html.ActionLink("Sil", "YazarSil", new { id = yzr.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
    <td><a href="/Yazar/YazarGetir/@yzr.ID" class="btn btn-success">Güncelle</a></td>

</tr>
    }
</table>
<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yeni Yazar Ekle</a>