@using MVCKUTUPHANE.Models.Entity,
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLUYE>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Üye İşlemleri</h2>
<br />
<br />


<table class="table table-hover">
    <tr style="background-color:#e6a32e">
        <th>ÜYE ID</th>
        <th>ÜYE ADI</th>
        <th>ÜYE SOYADI</th>
        <th>MAİL</th>
        <th>KULLANICI ADI</th>
        <th>ŞİFRE</th>
        <th>TELEFON</th>
        <th>OKUL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>KİTAP GEÇMİŞİ</th>
    </tr>
    @foreach (var uye in Model)
    {
<tr>
    <td>@uye.ID</td>
    <td>@uye.AD</td>
    <td>@uye.SOYAD</td>
    <td>@uye.MAIL</td>
    <td>@uye.KULLANICIADI</td>
    <td>@uye.SIFRE</td>
    <td>@uye.TELEFON</td>
    <td>@uye.OKUL</td>
    <td><a href="/Uye/Sil/@uye.ID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Uye/UyeGetir/@uye.ID" class="btn btn-success">Güncelle</a></td>
    <td><a href="/Uye/KitapGecmis/@uye.ID" class="btn btn-info">Kitap Geçmişi</a></td>
</tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Uye/YeniUye/" class="btn btn-primary">Yeni Üye Ekle</a>

