@model MVCKUTUPHANE.Models.Entity.TBLDUYURU
@{
    ViewBag.Title = "DuyuruDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("DuyuruGuncelle", "Duyuru", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(p => p.ID)
        @Html.TextBoxFor(p => p.ID, new { @class = "form-control" })
        <br />
        <label>Kategori</label>
        @Html.TextBoxFor(p => p.KATEGORI, new { @class = "form-control" })
        <br />
        <label>İçerik</label>
        @Html.TextBoxFor(p => p.ICERIK, new { @class = "form-control" })
        <br />
        <label>Tarih</label>
        @Html.TextBoxFor(p => p.TARİH, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}
